 # Application
  APP_NAME=Lumos Hybrid RAG
  APP_VERSION=1.0.0
  DEBUG=false
  HOST=0.0.0.0
  PORT=8000

  # Database
  DATABASE_URL=postgresql://username:password@localhost:5432/lumos

  # Neo4j
  NEO4J_URI=bolt://localhost:7687
  NEO4J_USER=neo4j
  NEO4J_PASSWORD=your_neo4j_password

  # LLM Configuration (Claude)
  LLM_PROVIDER=anthropic
  LLM_API_KEY=your-anthropic-api-key
  LLM_BASE_URL=https://api.anthropic.com
  LLM_MODEL=claude-3-5-sonnet-20241022

  # Embedding Configuration
  EMBEDDING_API_KEY=your-openai-api-key
  EMBEDDING_MODEL=text-embedding-3-small
  EMBEDDING_DIMENSIONS=1536

  # Authentication
  JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
  JWT_ALGORITHM=HS256
  ACCESS_TOKEN_EXPIRE_MINUTES=30

  # Integration Credentials
  SLACK_CLIENT_ID=your-slack-client-id
  SLACK_CLIENT_SECRET=your-slack-client-secret
  CONFLUENCE_CLIENT_ID=your-confluence-client-id
  CONFLUENCE_CLIENT_SECRET=your-confluence-client-secret
  JIRA_CLIENT_ID=your-jira-client-id
  JIRA_CLIENT_SECRET=your-jira-client-secret

  # CORS
  ALLOWED_ORIGINS=["http://localhost:3000","https://your-frontend-domain.com"]